@page
@model EComm.Web.Pages.Product.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
  <h4>Product</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Product Name
    </dt>
    <dd class="col-sm-10">
      @Model.Product.ProductName
    </dd>
    <dt class="col-sm-2">
     Unit Price
    </dt>
    <dd class="col-sm-10">
      @Model.Product.UnitPrice
    </dd>
    <dt class="col-sm-2">
      Package
    </dt>
    <dd class="col-sm-10">
      @Model.Product.Package
    </dd>
    <dt class="col-sm-2">
      Is Discontinued
    </dt>
    <dd class="col-sm-10">
      <input asp-for="Product.IsDiscontinued" disabled />
    </dd>
    <dt class="col-sm-2">
      Supplier
    </dt>
    <dd class="col-sm-10">
      @Model.Product.Supplier.CompanyName
    </dd>
  </dl>
</div>
<div>
  <a asp-page="/product/edit" asp-route-id="@Model.Product.Id">Edit</a> |
  <a asp-page="/Index">Back to List</a>
</div>
<br />
<form id="addToCartForm" controller="Product" asp-page="/addtocart" asp-route-id="@Model.Product.Id">
  <input name="quantity" size="3" />
  <input type="submit" value="Add to Cart" />
</form>
<div id="message"></div>

@section scripts {
  <script src="~/js/cart.js" asp-append-version="true"></script>
}
